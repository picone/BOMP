<interface>
	<name>获取Unix已挂载分区</name>
	<description>在一个Unix主机使用'df'命令查询已挂载分区列表.</description>
	<script_path>perl |path_cacti|/scripts/query_unix_partitions.pl</script_path>
	<arg_index>index</arg_index>
	<arg_query>query</arg_query>
	<arg_get>get</arg_get>
	<arg_num_indexes>num_indexes</arg_num_indexes>
	<output_delimeter>:</output_delimeter>
	<index_order>dskDevice</index_order>
	<index_order_type>alphabetic</index_order_type>
	<index_title_format>|chosen_order_field|</index_title_format>

	<fields>
		<dskDevice>
			<name>设置名</name>
			<direction>input</direction>
			<query_name>device</query_name>
		</dskDevice>
		<dskMount>
			<name>挂载点</name>
			<direction>input</direction>
			<query_name>mount</query_name>
		</dskMount>

		<dskTotal>
			<name>总块数</name>
			<direction>output</direction>
			<query_name>total</query_name>
		</dskTotal>
		<dskUsed>
			<name>已用块数</name>
			<direction>output</direction>
			<query_name>used</query_name>
		</dskUsed>
		<dskAvailable>
			<name>可用块数</name>
			<direction>output</direction>
			<query_name>available</query_name>
		</dskAvailable>
		<dskPercentUsed>
			<name>已用百分比</name>
			<direction>output</direction>
			<query_name>percent</query_name>
		</dskPercentUsed>
	</fields>
</interface>
